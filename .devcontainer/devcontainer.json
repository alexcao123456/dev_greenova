{
	"name": "Greenova Development Environment",
	"build": {
		"dockerfile": "./Containerfile",
		"context": "."
	},
	"features": {
		"./local-features/git": {},
		"./local-features/node": {},
		"./local-features/python": {},
		"./local-features/dropbear": {}
	},
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],
	"remoteUser": "vscode",
	"onCreateCommand": ".devcontainer/scripts/on_create.sh",
	"postCreateCommand": ".devcontainer/scripts/post_create.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-python.python"
			],
			"settings": {
				"python.defaultInterpreterPath": "/workspaces/greenova/.venv/bin/python",
				"python.terminal.activateEnvironment": true,
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.linting.mypyEnabled": true
			}
		}
	},
	"remoteEnv": {
		"PATH": "/workspaces/greenova/.venv/bin:${containerEnv:PATH}",
		"PYTHONPATH": "/workspaces/greenova"
	},
	"workspaceFolder": "/workspaces/greenova",
	"runArgs": ["--userns=keep-id"]
}
